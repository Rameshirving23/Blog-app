<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="#ffff"
        android:id="@+id/popup_UserImg"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/popup_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/regicon" />

    <EditText
        android:background="@drawable/popup_edittext_style"
        android:id="@+id/popup_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Title"
        app:layout_constraintEnd_toStartOf="@+id/popup_UserImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="@drawable/popup_edittext_style"
        android:id="@+id/popup_descripton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_title" />

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/popup_Postimage"
        android:layout_width="0dp"
        android:layout_height="264dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_descripton"
        app:srcCompat="@drawable/photofunia" />

    <ImageView
        android:id="@+id/popup_button"
        android:layout_width="53dp"
        android:layout_height="57dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/circle_bg"
        app:layout_constraintEnd_toEndOf="@+id/popup_Postimage"
        app:layout_constraintStart_toStartOf="@+id/popup_Postimage"
        app:layout_constraintTop_toBottomOf="@+id/popup_descripton"
        app:srcCompat="@drawable/ic_create" />

    <ProgressBar
        android:padding="4dp"
        android:background="@drawable/circle_bg2"
        android:id="@+id/popup_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/popup_button"
        app:layout_constraintEnd_toEndOf="@+id/popup_button"
        app:layout_constraintStart_toStartOf="@+id/popup_button"
        app:layout_constraintTop_toTopOf="@+id/popup_button" />

</androidx.constraintlayout.widget.ConstraintLayout>